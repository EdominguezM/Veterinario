<div class="row">

  <div class="col-md offset-md-2">
    <div class="form-group">

    <%= form_with(model: client, local: true) do |form| %>
      <% if client.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

          <ul>
            <% client.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name, "Nombre" %>
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :phone, "Telefono" %>
        <%= form.number_field :phone %>
      </div>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email %>
      </div>

      <h3>Mascotas</h3>
      <div class="field" id="pets">
        <%= form.fields_for :pets do |pet_form| %>
        <%= render 'pet_fields', f: pet_form %>
        <% end %>
        <div class="links">
          <%= link_to_add_association 'Agregar Mascota', form, :pets %>
        </div>
      </div>
      <div class="actions">
        <%= form.submit "Guardar", class:"btn btn-primary" %>
        <%= link_to 'Volver', clients_path, class: "btn btn-light"  %>
      </div>
    <% end %>
    </div>
  </div>
</div>